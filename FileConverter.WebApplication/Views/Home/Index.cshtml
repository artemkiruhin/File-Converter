@{
    ViewData["Title"] = "Markdown to PDF Converter";
}

<h2>Markdown to PDF Converter</h2>

<form enctype="multipart/form-data" method="post" asp-controller="Pdf" asp-action="convert">
    <div>
        <label for="markdownFile">Upload Markdown (.md) File:</label>
        <input type="file" id="markdownFile" name="markdownFile" accept=".md" required />
    </div>
    <br />
    <button type="submit">Convert to PDF</button>
</form>
